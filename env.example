# ==========================================
# NextAuth Configuration
# ==========================================
# Secret key untuk NextAuth JWT authentication
# Generate dengan: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-heres

# URL aplikasi Anda (untuk production/staging)
NEXTAUTH_URL=http://localhost:3000


# ==========================================
# Backend API URLs
# ==========================================
# Base URL untuk User API
NEXT_PUBLIC_API_BASE_URL=https://your-api-url.com

# Base URL untuk Transaction API
NEXT_PUBLIC_API_TRANS_URL=https://your-transaction-api-url.com

# Base URL untuk Promotion API
NEXT_PUBLIC_API_PROMOTION_URL=https://your-promotion-api-url.com


# ==========================================
# BetBy Integration (Sports Betting)
# ==========================================
# BetBy Brand ID untuk sports betting iframe
NEXT_PUBLIC_BETBY_BRAND_ID=your-betby-brand-id

# BetBy Script URL untuk loading iframe
NEXT_PUBLIC_BETBY_SCRIPT_URL=https://your-betby-script-url.com


# ==========================================
# CamoPay Integration (Payment Gateway)
# ==========================================
# CamoPay URL untuk payment processing
NEXT_PUBLIC_CAMOPAY_URL=https://your-camopay-url.com

# CamoPay API Key
NEXT_PUBLIC_CAMOPAY_KEY=your-camopay-api-key


# ==========================================
# Odin/Bifrost Integration (Game Iframe)
# ==========================================
# Odin URL untuk game iframe (default: https://iframe.integration.fulla.bet)
NEXT_PUBLIC_ODIN_URL=https://iframe.integration.fulla.bet


# ==========================================
# Telegram Bot Configuration
# ==========================================
# Telegram Bot Token dari @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ==========================================
# Environment (Optional - auto-set oleh Next.js)
# ==========================================
# NODE_ENV=development
# NODE_ENV=production

